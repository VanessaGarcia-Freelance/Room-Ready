doctype html
html(lang='en')
  //- include head tag
  +head('Room Ready - Home')

  body.page-template
    +pageheader()
    +navigation('home')
    
    div.container
      div.col-xs-12.col-md-10.col-md-offset-1
          div.row
            div.col-xs-12.col-md-6
              div.content-block
                h5 System Info
                div
                  ul.list-unstyled
                    li
                      span.listlabel System Name:
                      span#Name.SystemInfo Example Name
                  ul.list-unstyled
                    li
                      span.listlabel Mac Address:
                      span#MACAddress.SystemInfo Example MAC
                    li
                      span.listlabel IP Address:
                      span#IPAddress.SystemInfo Example IP
                    li
                      span.listlabel Gateway:
                      span#Gateway.SystemInfo Example Gateway
                  ul.list-unstyled
                    li
                      span.listlabel Serial Number:
                      span#SerialNumber.SystemInfo Example Serial
              div.content-block
                h5.listlabel System License
