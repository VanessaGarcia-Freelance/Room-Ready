            div.col-xs-12.col-md-6
              div.content-block
                h5 Connected Devices
                div
                  ul.list-unstyled
                    li
                      span.listlabel Number of Displays:
                      span#NumberOfDisplays.ConnectedDevices #
                    li
                      span.listlabel Codec IP:
                      span#CodecIp.ConnectedDevices IP
                    li
                      span.listlabel Codec Model:
                      span#CodecModel.ConnectedDevices Model
                    li
                      span.listlabel Codec Firmware:
                      span#CodecFirmware.ConnectedDevices Firmware
                  ul.list-unstyled
                    li
                      span.listlabel Number of Codecs:
                      span#NumberOfCodecs.ConnectedDevices #
                    li
                      span.listlabel Number of Drones:
                      span#NumberOfDrones.ConnectedDevices #

              div.content-block
                h5 System Status
                div
                  div.row
                    div#Portal.SystemStatus.col-xs-12.col-sm-4
                      h6 Portal Online
                      div.circle
                    div#Codec.SystemStatus.col-xs-12.col-sm-4
                      h6 Codec Online
                      div.circle
                    div#Monitors.SystemStatus.col-xs-12.col-sm-4
                      h6 Monitors
                      div.circle
          div.row.remoteDevice
            div.col-xs-12.col-md-12
              div.content-block
                h5 Remote Device Status
                div.table-responsive
                  table#RemoteDevice.table
                    tr
                      th Room Name
