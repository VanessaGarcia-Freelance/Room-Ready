  doctype html
html(lang='en')
  //- Include Head Tag for site
  include _components/head.pug
  +head('Room Ready - Login')

  body.login_page
    div.site-wrapper
      div.site-wrapper-inner

        div.cover-container
          div.inner.cover
            form.form-signin
              h2.form-signin-heading Sign In
              div.form-fields
                div
                  label(for='Username') Username
                  input#Username.Login.form-control(type='text' required autofocus)
                div
                  label(for='Password') Password
                  input#Password.Login.form-control(type='password' required)
                div.clearfix
