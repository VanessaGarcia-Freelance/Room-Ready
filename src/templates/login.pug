include _mixins/mixins.pug

doctype html
html(lang='en')
  //- include head tag
  +head('Room Ready - Login')

  body.login_page
    div.site-wrapper
      div.site-wrapper-inner

        div.cover-container
          div.inner.cover
            form.form-signin(method="post" action="/Login")
              h2.form-signin-heading Sign In
              div.form-fields
                div
                  label(for='Username') Username
                  input#Username.Login.form-control(type='text' name='login' required autofocus)
                div
                  label(for='Password') Password
                  input#Password.Login.form-control(type='password' name='password' required)
                div.clearfix
                button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign in

